{
  "name": "keykapp",
  "version": "0.0.0-development",
  "description": "Keykapp is an inclusive, predictive, and programmable keyboard for all.",
  "main": "n/a",
  "repository": "https://github.com/agentofuser/keykapp",
  "author": "Agent of User <git@agentofuser.com>",
  "license": "AGPL-3.0-or-later",
  "private": false,
  "scripts": {
    "build": "rm -rf ./.cache ./public && gatsby build",
    "deploy": "now --prod",
    "format": "prettier --write ./**/*.{js,ts,tsx,json,md,mdx,html,css}",
    "lint": "eslint --fix src/**/*",
    "now-build": "gatsby build",
    "serve": "gatsby serve",
    "start": "rm -rf ./.cache ./public && gatsby develop",
    "up": "ncu -u && yarn",
    "watch": "nodemon"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@isomorphic-git/lightning-fs": "^3.4.1",
    "@material-ui/core": "^4.8.3",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/styles": "^4.8.2",
    "automerge": "^0.12.1",
    "copy-text-to-clipboard": "^2.1.1",
    "file-saver": "^2.0.2",
    "fp-ts": "^2.4.1",
    "gatsby": "^2.19.1",
    "gatsby-plugin-manifest": "^2.2.37",
    "gatsby-plugin-material-ui": "^2.1.6",
    "gatsby-plugin-offline": "^3.0.32",
    "gatsby-plugin-react-helmet": "^3.1.21",
    "gatsby-plugin-typescript": "^2.1.26",
    "isomorphic-git": "^0.77.1",
    "n-gram": "^1.1.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-use-dimensions": "^1.2.1",
    "typeface-roboto": "^0.0.75"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.1",
    "@types/node": "^13.1.8",
    "@types/react": "^16.9.18",
    "@types/react-dom": "^16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "nodemon": "^2.0.2",
    "now": "^16.7.3",
    "npm-check-updates": "^4.0.1",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "prettier": {
    "printWidth": 79,
    "proseWrap": "always",
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "nodemonConfig": {
    "ignore": [
      ".DS_Store",
      ".cache",
      ".git",
      "node_modules",
      "public",
      "yarn-error.log",
      "yarn.lock",
      "*flycheck*"
    ],
    "watch": [
      "content",
      "gatsby-browser.js",
      "gatsby-config.js",
      "gatsby-node.js",
      "package.json",
      "src",
      "tsconfig.json"
    ],
    "ext": "js,ts,tsx,md",
    "verbose": true,
    "exec": "yarn build && yarn serve"
  }
}
