{
  "name": "keykapp",
  "version": "0.0.0-development",
  "description": "Keykapp is an inclusive, predictive, and programmable keyboard for all.",
  "main": "n/a",
  "repository": "https://github.com/agentofuser/keykapp",
  "author": "Agent of User <git@agentofuser.com>",
  "private": true,
  "scripts": {
    "build": "rm -rf ./.cache ./public && gatsby build",
    "deploy": "now --prod",
    "format": "prettier --write ./**/*.{js,ts,tsx,json,md,html,css}",
    "lint": "eslint --fix src/**/*",
    "now-build": "gatsby build",
    "serve": "gatsby serve",
    "start": "rm -rf ./.cache ./public && gatsby develop",
    "up": "ncu -u && yarn",
    "watch": "nodemon"
  },
  "engines": {
    "node": ">=12"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/styles": "^4.11.3",
    "copy-text-to-clipboard": "^3.0.1",
    "file-saver": "^2.0.5",
    "fp-ts": "^2.9.5",
    "gatsby": "^3.2.1",
    "gatsby-plugin-manifest": "^3.2.0",
    "gatsby-plugin-material-ui": "^3.0.1",
    "gatsby-plugin-offline": "^4.2.0",
    "gatsby-plugin-react-helmet": "^4.2.0",
    "gatsby-plugin-typescript": "^3.2.0",
    "immer": "^9.0.1",
    "n-gram": "^2.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-use-dimensions": "^1.2.1",
    "typeface-roboto": "^1.1.13",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.2",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-helmet": "^6.1.1",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "nodemon": "^2.0.7",
    "now": "^17.0.1",
    "npm-check-updates": "^11.4.1",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "printWidth": 79,
    "proseWrap": "always",
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "nodemonConfig": {
    "ignore": [
      ".DS_Store",
      ".cache",
      ".git",
      "node_modules",
      "public",
      "yarn-error.log",
      "yarn.lock",
      "*flycheck*"
    ],
    "watch": [
      "content",
      "gatsby-browser.js",
      "gatsby-config.js",
      "gatsby-node.js",
      "package.json",
      "src",
      "tsconfig.json"
    ],
    "ext": "js,ts,tsx,md",
    "verbose": true,
    "exec": "yarn build && yarn serve"
  }
}
