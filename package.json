{
  "name": "keykapp",
  "version": "1.0.0",
  "description": "Keykapp is an inclusive, predictive, and programmable keyboard for all.",
  "main": "n/a",
  "repository": "https://github.com/agentofuser/keykapp",
  "author": "Agent of User <git@agentofuser.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rm -rf ./.cache ./public && gatsby build",
    "deploy": "now --target production",
    "format": "prettier --write ./**/*.{js,ts,tsx,json,md,mdx,html,css}",
    "lint": "eslint --fix src/**/*",
    "now-build": "gatsby build",
    "serve": "gatsby serve",
    "start": "rm -rf ./.cache ./public && gatsby develop",
    "watch": "nodemon"
  },
  "dependencies": {
    "@material-ui/core": "^4.2.1",
    "@material-ui/icons": "^4.2.1",
    "@material-ui/styles": "^4.2.1",
    "copy-text-to-clipboard": "^2.1.0",
    "fp-ts": "^2.0.3",
    "gatsby": "^2.13.39",
    "gatsby-plugin-material-ui": "^2.1.4",
    "gatsby-plugin-react-helmet": "^3.1.2",
    "gatsby-plugin-typescript": "^2.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-helmet": "^5.2.1",
    "typeface-roboto": "^0.0.75"
  },
  "devDependencies": {
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "@types/react-helmet": "^5.0.8",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.6.1",
    "nodemon": "^1.19.1",
    "now": "^15.8.5",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "prettier": {
    "printWidth": 79,
    "proseWrap": "always",
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "nodemonConfig": {
    "ignore": [
      ".DS_Store",
      ".cache",
      ".git",
      "node_modules",
      "public",
      "yarn-error.log",
      "yarn.lock",
      "*flycheck*"
    ],
    "watch": [
      "content",
      "gatsby-browser.js",
      "gatsby-config.js",
      "gatsby-node.js",
      "package.json",
      "src",
      "tsconfig.json"
    ],
    "ext": "js,ts,tsx,md",
    "verbose": true,
    "exec": "yarn build && yarn serve"
  }
}
