{
  "name": "keycapp",
  "version": "1.0.0",
  "description": "Keycapp is an inclusive, predictive, and programmable keyboard for all.",
  "main": "n/a",
  "repository": "https://github.com/agentofuser/keycapp.org",
  "author": "Agent of User <git@agentofuser.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "deploy": "now --target production",
    "format": "prettier --write ./**/*.{js,ts,tsx,json,md,mdx,html,css}",
    "lint": "eslint --fix src/**/*",
    "now-build": "gatsby build",
    "start": "gatsby develop"
  },
  "dependencies": {
    "fp-ts": "^2.0.0",
    "gatsby": "^2.12.0",
    "gatsby-plugin-typescript": "^2.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-react": "^7.14.2",
    "now": "^15.6.2",
    "prettier": "^1.18.2",
    "typescript": "^3.5.2"
  },
  "prettier": {
    "printWidth": 79,
    "proseWrap": "always",
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {}
  }
}
